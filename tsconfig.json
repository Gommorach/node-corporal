{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "dist",
        "target": "es6",
        "watch": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": false,
        "lib": [
            "dom",
            "es2015"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "../node_modules/@types",
            "node_modules/@types"
        ]
    },
    "include": [
        "index.ts",
        "run.ts",
        "commands/**/*.ts",
        "lib/**/*.ts",
        "tests/**/*.ts",
        "types/**/*.ts"
    ],
    "exclude": [
        "**/dist/**",
        "**/node_modules/**"
    ]
}
